<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/single_question"
        android:text="Mr. Lee _________ his class into six groups for the convenience of studentsâ€™ discussion."
        android:textSize="30dp"
        android:layout_below="@+id/chronometer_single"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#a3fbf2"
        android:editable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="classify"
        android:id="@+id/btn_ans1"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/single_question"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="divides"
        android:id="@+id/btn_ans2"
        android:layout_below="@+id/btn_ans1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="split"
        android:id="@+id/btn_ans3"
        android:layout_below="@+id/btn_ans2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sort"
        android:id="@+id/btn_ans4"
        android:layout_below="@+id/btn_ans3"
        android:layout_centerHorizontal="true" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer_single"
        android:textSize="40dp"
        android:format="30"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#fefefe"
        android:background="#ff0000" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="skip"
        android:id="@+id/btn_single_skip"
        android:layout_below="@+id/btn_ans4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>